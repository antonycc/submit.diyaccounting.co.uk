{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://submit.diyaccounting.co.uk/schemas/product-catalog.json",
  "title": "Product Catalog (TOML parsed to JSON)",
  "type": "object",
  "required": ["version", "bundles", "activities"],
  "properties": {
    "version": { "type": "string" },
    "bundles": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "allocation", "auth"],
        "properties": {
          "id": { "type": "string", "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$" },
          "name": { "type": "string" },
          "allocation": { "enum": ["automatic", "on-request"] },
          "auth": { "enum": ["none", "required"] },
          "cap": { "type": "integer", "minimum": 0 },
          "timeout": { "type": "string" },
          "qualifiers": {
            "type": "object",
            "properties": {
              "requiresTransactionId": { "type": "boolean" },
              "subscriptionTier": { "enum": ["Basic", "Advanced"] }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },
    "activities": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "bundles"],
        "properties": {
          "id": { "type": "string", "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$" },
          "name": { "type": "string" },
          "bundles": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string" }
          },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          },
          "metadata": { "type": "object", "additionalProperties": true }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
